---
import Layout from "../layouts/Layout.astro";
import BlogPostCard from "../components/BlogPostCard.astro";
import GalleryGrid from "../components/GalleryGrid.astro";
import ProfileCard from "../components/ProfileCard.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

// Fetch latest 3 published posts
const allPosts = (
  await getCollection("posts", (entry) => !entry.data.draft)
).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
const latestPosts = allPosts.slice(0, 3);

const texts = [
    "Hello World,",
    "I am Giray Coskun.",
    "Follow the white rabbit!",
  ];
---

<Layout title="Home">
  {/* Hero Section */}
  <div class="bg-gray-200 dark:bg-gray-900">
    <div class="container mx-auto px-6 py-24">
      <div class="flex flex-wrap items-center justify-between gap-8">
        <div class="flex-1 min-w-75 text-center md:text-left">
          <h1
            id="hero"
            data-texts={JSON.stringify(texts)}
            class="text-5xl md:text-6xl font-extrabold text-gray-900 dark:text-gray-100 mb-6"
            aria-live="polite"
          >
            <span id="hero-text">Hello World,</span>
            <span class="hero-cursor" aria-hidden="true">|</span>
          </h1>
          <p class="mt-6 text-lg md:text-xl text-gray-600 dark:text-gray-300">
            I am a Computer Scientist/Software Engineer, living in Munich. <br
            />
            I am also a CMAS 3* Scuba Diver and a hiking enthusiast. <br />
            This is my personal website to write about my projects, hobbies and trips.
          </p>
        </div>
        <div class="shrink-0 mx-auto">
          <Image
            src="/banner.jpeg"
            alt="Profile"
            class="w-75 md:w-100 h-auto rounded-lg shadow-lg"
            width={400}
            height={400}
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>

  {/* Latest posts section */}
  <div class="bg-white dark:bg-gray-800 py-12">
    <div class="container mx-auto px-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
          Latest posts
        </h2>
        <a
          href="/blog-index"
          class="text-sm text-emerald-600 dark:text-emerald-400 hover:underline"
        >
          View all posts â†’
        </a>
      </div>

      {
        latestPosts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {latestPosts.map((post) => (
              <BlogPostCard
                title={post.data.title}
                slug={post.slug}
                date={post.data.date}
                description={post.data.description}
                author={{
                  name: post.data.author.name,
                  avatar: post.data.author.avatar,
                }}
                tags={post.data.tags}
                coverImage={post.data.coverImage}
              />
            ))}
          </div>
        ) : (
          <div class="text-gray-600 dark:text-gray-400">
            Check out the{" "}
            <a
              href="/blog-index"
              class="text-emerald-600 dark:text-emerald-400 hover:underline"
            >
              blog page
            </a>{" "}
            for latest articles.
          </div>
        )
      }
    </div>
  </div>

  {/* Photo Gallery */}
  <div class="bg-gray-200 dark:bg-gray-700 py-12">
    <div class="container mx-auto px-6">
      <GalleryGrid limit={6} random={true} showTitle={true} eagerCount={3} />
    </div>
  </div>

  {/* GitHub Profile Card */}
  <div class="bg-gray-100 dark:bg-gray-900 py-12">
    <div class="container mx-auto px-6">
      <ProfileCard />
    </div>
  </div>

  {/* Spotify Playlists */}
  <div class="bg-gray-200 dark:bg-gray-700 py-12">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <iframe
          class="w-full rounded-xl border-0"
          style="height: 352px"
          src="https://open.spotify.com/embed/playlist/5Bdj3xYsHtdaQQxbcoYZfZ"
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"
          title="Spotify Playlist yan bastik"></iframe>
        <iframe
          class="w-full rounded-xl border-0"
          style="height: 352px"
          src="https://open.spotify.com/embed/playlist/3C29xT0NaEH7z3MGaPzsCE"
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"
          title="Spotify Playlist tinilar"></iframe>
      </div>
    </div>
  </div>
  {/* Hardcover Bookcase */}
  <div class="bg-gray-100 dark:bg-gray-800 py-12">
    <div class="text-center mb-5">
      <a href="https://hardcover.app/@giraycoskun/books/currently-reading" class="text-2xl font-bold text-gray-900 dark:text-gray-100">Currently Reading</a>
    </div>
    <div
      data-hardcover-widget
      data-api-url="https://hardcoverembed.gouthamve.dev"
      data-username="giraycoskun"
      data-max-width="1000px"
      data-columns="4"
      data-show-powered-by="false"
      data-min-column-width="200px"
      data-gap="0.5rem"
    >
    </div>
  </div>
  <style>
    .hero-cursor {
      display: inline-block;
      margin-left: 0.25rem;
      animation: blink 1s step-end infinite;
      color: inherit;
    }

    @keyframes blink {
      50% { opacity: 0 }
    }
  </style>

  <script>
    (function () {
      const hero = document.getElementById('hero');
      if (!hero) return;
      let texts = [];
      try { texts = JSON.parse(hero.dataset.texts || '[]'); } catch (e) { texts = []; }
      if (!texts || texts.length === 0) return;

      const el = document.getElementById('hero-text');
      let txtIndex = 0;
      let charIndex = 0;
      let deleting = false;

      const TYPING_SPEED = 80;
      const DELETING_SPEED = 40;
      const PAUSE_AFTER_FULL = 1600;

      function tick() {
        const current = texts[txtIndex] || '';
        if (!deleting) {
          el.textContent = current.substring(0, charIndex + 1);
          charIndex++;
          if (charIndex === current.length) {
            deleting = true;
            setTimeout(tick, PAUSE_AFTER_FULL);
            return;
          }
          setTimeout(tick, TYPING_SPEED);
        } else {
          el.textContent = current.substring(0, charIndex - 1);
          charIndex--;
          if (charIndex === 0) {
            deleting = false;
            txtIndex = (txtIndex + 1) % texts.length;
            setTimeout(tick, 500);
            return;
          }
          setTimeout(tick, DELETING_SPEED);
        }
      }

      // Kick off
      tick();
    })();
  </script>

</Layout>

<script src="https://hardcoverembed.gouthamve.dev/static/widget.js"></script>
