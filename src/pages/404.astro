---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="404 Not Found"
  description="The page you are looking for does not exist."
>
  <main class="container mx-auto px-6 py-24 text-center">
    <!-- Public folder image -->
    <img
      src="/404.png"
      alt="Not found"
      class="mx-auto rounded-lg shadow-md mb-8 w-64 object-cover"
    />

    <p class="text-lg text-gray-600 mb-8">
      The link may be broken or the page has been moved.
    </p>

    <div class="flex items-center justify-center gap-4">
      <a
        href="/"
        class="px-4 py-2 bg-emerald-600 text-white rounded shadow hover:bg-emerald-700"
      >
        Go Home
      </a>
      <a
        href="/work"
        class="px-4 py-2 bg-white border border-gray-200 text-gray-800 rounded hover:bg-gray-50"
      >
        Go to Portfolio
      </a>
      <a
        href="/gallery"
        class="px-4 py-2 bg-white border border-gray-200 text-gray-800 rounded hover:bg-gray-50"
      >
        Go to Gallery
      </a>
      <a
        href="/blog"
        class="px-4 py-2 bg-white border border-gray-200 text-gray-800 rounded hover:bg-gray-50"
      >
        Go to Blog
      </a>

      <a
        href="/hikes"
        class="px-4 py-2 bg-white border border-gray-200 text-gray-800 rounded hover:bg-gray-50"
      >
        Go to Hikes
      </a>
    </div>
  </main>
</Layout>
